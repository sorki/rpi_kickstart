#{{ ansible_managed }}

{% if i2c_enable %}
# enable i2c
dtparam=i2c=on
{% endif %}

# enable VideoCore i2c
#dtparam=i2c_vc=on
# legacy way
#dtparam=i2c0=on
#dtparam=i2c1=on

{% if i2c_rtc %}
dtoverlay=i2c-rtc,{{ i2c_rtc }}
{% endif %}

{% if camera_enable %}
start_x=1
{% endif %}

{% if disable_camera_led %}
disable_camera_led=1
{% endif %}

gpu_mem={{ gpu_mem }}

{% if uart_baud %}
init_uart_baud={{ uart_baud }}
{% endif %}

{% if pps_input_enable %}
dtoverlay=pps-gpio,gpiopin={{ pps_gpio_pin }}
{% endif %}

{% if led_trigger %}
dtparam=act_led_trigger={{ led_trigger }}
{% endif %}
